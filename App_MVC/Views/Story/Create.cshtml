@model CreateStoryVM

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Makale Paylaş</h3>
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input asp-for="CurrentUserId" class="form-control d-none" />

                        <div class="mb-3 text-center">
                            <img src="~/img/@Model.ImageUrl" class="img-fluid rounded mb-2" alt="Story Image" style="max-height: 200px;">
                            <input type="file" name="formFile" asp-for="ImageUrl" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <select asp-for="TopicId" asp-items="@Model.SelectForTopicId" class="form-select">
                                <option>Bir Makale Konusu Seçiniz</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control form-control-lg" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label"></label>
                            <textarea asp-for="Content" class="form-control form-control-lg" rows="5"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
